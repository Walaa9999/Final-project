<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/countryDetailsFragment">
    <fragment
        android:id="@+id/countryDetailsFragment"
        android:name="com.example.countryweather.ui.details.country.CountryDetailsFragment"
        android:label="Country Details"
        tools:layout="@layout/fragment_country_details">
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="population"
            app:argType="string" />
        <argument
            android:name="region"
            app:argType="string" />
        <argument
            android:name="code"
            app:argType="string" />
        <argument
            android:name=" capital"
            app:argType="string" />
        <action
            android:id="@+id/action_countryDetailsFragment_to_weatherDetailsFragment"
            app:destination="@id/weatherDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/weatherDetailsFragment"
        android:name="com.example.countryweather.ui.details.weather.WeatherDetailsFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather_details">
        <argument
            android:name="name"
            android:defaultValue=''
            app:argType="string" />
    </fragment>
</navigation>